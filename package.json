{
  "name": "midas-contracts",
  "version": "2.0.0",
  "description": "",
  "license": "AGPL-3.0",
  "author": "RedDuck Software",
  "scripts": {
    "prepare": "husky install",
    "hardhat": "hardhat",
    "clean": "hardhat clean",
    "docgen": "hardhat docgen",
    "compile": "hardhat compile",
    "build": "run-s clean compile",
    "test:unit": "hardhat test $(find test/unit -name \"*.test.ts\")",
    "test:integration": "hardhat test $(find test/integration -name \"*.test.ts\")",
    "test": "yarn test:unit && yarn run test:integration",
    "coverage": "cross-env COVERAGE=true hardhat coverage --solcoverjs ./.solcover.json --testfiles 'test/unit/*.test.ts'",
    "slither": "slither . --config-file ./slither.config.json",
    "slither:summary": "yarn slither --print human-summary --config-file ./slither.config.json",
    "deploy": "hardhat deploy",
    "verify": "hardhat etherscan-verify",
    "lint:ts": "eslint \"**/*.{js,ts}\"",
    "lint:ts:fix": "eslint \"**/*.{js,ts}\" --fix",
    "lint:sol": "solhint \"contracts/**/*.sol\"",
    "lint:sol:fix": "solhint \"contracts/**/*.sol\" --quiet --fix",
    "format:ts": "prettier \"**/*.{js,ts,json}\" --check",
    "format:ts:fix": "prettier \"**/*.{js,ts,json}\" --write",
    "format:sol": "prettier \"contracts/**/*.sol\" --check",
    "format:sol:fix": "prettier \"contracts/**/*.sol\" --write",
    "format:yml": "prettier \"**/*.{yml,yaml}\" --check",
    "format:yml:fix": "prettier \"**/*.{yml,yaml}\" --write",
    "codestyle": "run-s lint:* format:*",
    "codestyle:fix": "run-s lint:*:* format:*:*",
    "hh:run": "yarn hardhat run",
    "hh:run:script": "yarn hardhat runscript",
    "deploy:ac": "yarn hh:run:script scripts/deploy/deploy_AccessControl.ts",
    "deploy:token": "yarn hh:run:script scripts/deploy/deploy_Token.ts",
    "deploy:aggregator": "yarn hh:run:script scripts/deploy/deploy_CustomAggregator.ts",
    "deploy:aggregator:ptoken": "yarn hh:run:script scripts/deploy/deploy_PaymentToken_CustomAggregator.ts",
    "deploy:feed": "yarn hh:run:script scripts/deploy/deploy_DataFeed.ts",
    "deploy:feed:ptoken": "yarn hh:run:script scripts/deploy/deploy_PaymentToken_DataFeed.ts",
    "deploy:dv": "yarn hh:run:script scripts/deploy/deploy_DV.ts",
    "deploy:rv": "yarn hh:run:script scripts/deploy/deploy_RV.ts",
    "deploy:rv:swapper": "yarn hh:run:script scripts/deploy/deploy_RVSwapper.ts",
    "deploy:rv:buidl": "yarn hh:run:script scripts/deploy/deploy_RVSwapper.ts",
    "verify:proxy": "yarn hardhat verify --contract @openzeppelin/contracts/proxy/transparent/TransparentUpgradeableProxy.sol:TransparentUpgradeableProxy",
    "verify:sourcify": "VERIFY_SOURCIFY=true VERIFY_ETHERSCAN=false yarn hardhat verify",
    "dump:roles": "yarn hh:run scripts/dump_roles.ts"
  },
  "devDependencies": {
    "@chainlink/contracts": "^0.6.1",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.6",
    "@nomicfoundation/hardhat-toolbox": "^1.0.1",
    "@nomicfoundation/hardhat-verify": "^2.0.11",
    "@nomiclabs/hardhat-ethers": "2.2.3",
    "@openzeppelin/contracts": "^4.8.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.0",
    "@openzeppelin/hardhat-upgrades": "^1.27.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.3",
    "@types/mocha": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "@fordefi/web3-provider": "^0.2.5",
    "chai": "^4.3.6",
    "chalk": "^4.1.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.7",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-deploy": "^0.11.19",
    "hardhat-docgen": "^1.3.0",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "^8.0.1",
    "npm-run-all2": "^6.1.1",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.8.16",
    "solidity-docgen": "^0.6.0-beta.35",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.8.4"
  },
  "packageManager": "yarn@1.22.22"
}
